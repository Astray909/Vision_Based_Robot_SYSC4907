//Motor Connections
//Change this if you wish to use another diagram
#define EnA 10
#define EnB 5
#define In1 9
#define In2 8
#define In3 7
#define In4 6

#define mov0 2
#define mov1 3
#define mov2 4
// #define mov3 11 //Ocuppied by sensor, dont use!

// #define debug1 3
// #define debug2 11 //Ocuppied by sensor, dont use!

// Sensor connection defined below. Uncomment when testing.
int sensor_Mid_pin=11;
int sensor_Left_pin=12;
int sensor_Right_pin=13;

void setup() {
  // put your setup code here, to run once:
  // All motor control pins are outputs
  pinMode(EnA, OUTPUT);
  pinMode(EnB, OUTPUT);
  pinMode(In1, OUTPUT);
  pinMode(In2, OUTPUT);
  pinMode(In3, OUTPUT);
  pinMode(In4, OUTPUT);

  //000 == CASE0 == STOP
  //001 == CASE1 == STRAIGHT
  //010 == CASE2 == LEFT_Spin
  //011 == CASE3 == RIGHT_Spin
  //100 == CASE4 == LEFT_Curve
  //101 == CASE5 == RIGHT_Curve
  //110 == CASE6 == LEFTB     <= NOT USED
  //111 == CASE7 == RIGHTB    <= NOT USED
  //bit shifting as (mov2, mov1, mov0) in binary bits
  pinMode(mov0, INPUT);
  pinMode(mov1, INPUT);
  pinMode(mov2, INPUT);
  // pinMode(mov3, INPUT);   //Ocuppied by sensor, dont use!
  // pinMode(debug1, INPUT);
  // pinMode(debug2, INPUT); //Ocuppied by sensor, dont use!
  
  // sensor setup begings here: uncomment when testing
  pinMode(sensor_Mid, INPUT); // pin11 set as digital input from mid sensor
  pinMode(sensor_Left, INPUT); // pin12 set as digital input from left sensor
  pinMode(sensor_Right, INPUT); // pin13 set as digital input from right sensor
  
  Serial.begin(9600);
}

void loop() {
  int cmdEn = 1; // Arduino only takes user commands when cmdEn = 1;
  
  // put your main code here, to run repeatedly:
  //senor condition code below: uncomment when testing
  
  //midS = digitalRead(sensor_Mid);   // midS = readings from mid sensor, HIGH = collision, LOW = clear
  //lftS = digitalRead(sensor_Left);  // lftS = readings from left sensor
  //rgtS = digitalRead(sensor_Right); // rgtS = readings from right sensor
  
  if (digitalRead(sensor_Mid) == HIGH) // if middle sensor detect collision
  {
    cmdEn = 0;  //stop taking command and enter collision avoidance
    stop(); // First, robot stop and enter collision avoidance
    if (digitalRead(sensor_Left) == LOW) // if left sensor is clear,
      {
        while(digitalRead(sensor_Right == HIGH) // while mid sensor still trigered
        {
           turnLeft(); // turn left
        }
        while(digitalRead(sensor_Mid) == LOW && rgtS = digitalRead(sensor_Right) == HIGH) // while obstacle on the front right
        {
           goStraight();   // goStraight avoid collision
        }
        delay (1000);      // keep goStraight for 2sec
        stop();
        cmdEn = 1;  //exit collision avoidance, resume taking order
      }
    else if (digitalRead(sensor_Left) == HIGH && digitalRead(sensor_Right) == low) // if only right sensor is clear,
      {
        while(digitalRead(sensor_Mid) == HIGH) // while mid still blocked
         {
           turnRight(); // turn right
         }
         while(digitalRead(sensor_Mid) == LOW && digitalRead(sensor_Left) == HIGH) // while obstacle on the front left
         {
           goStraight();   // goStraight avoid collision
         }
         delay (1000);      // keep goStraight for 2sec
         stop();
         cmdEn = 1;  //exit collision avoidance, resume taking order
      }
    else  // all sensors blocked
    {
      while(digitalRead(sensor_Mid) == HIGH) // while mid sensor still trigered
       {
          turnLeft(); // turn left BY DEFAULT, as target tracking hovering is turn right
       }
       while(digitalRead(sensor_Mid) == LOW && digitalRead(sensor_Right) == HIGH) // while obstacle on the front right
       {
          goStraight();   // goStraight avoid collision
       }
       delay (1000);      // keep goStraight for 2sec
       stop();
       cmdEn = 1;  //exit collision avoidance, resume taking order
    }
  }

  // motion control code from rpi to arduino below:               
  while (cmdEn == 1) // when cmdEn = 1, system takes user command
  {
    // Create command case variable cmdC using bit shifting:
    int cmdC =(((digitalRead(mov2)<<2) | (digitalRead(mov1)<<1) | digitalRead(mov0))
      // 000 == CASE0 == STOP
      // 001 == CASE1 == STRAIGHT
      // 010 == CASE2 == LEFT_Spin
      // 011 == CASE3 == RIGHT_Spin
      // 100 == CASE4 == LEFT_Curve
      // 101 == CASE5 == RIGHT_Curve
    switch(cmdC)
    {
      case0:
        Serial.println("cmdC == 0 == stop");
        stop();
      case 1:
        Serial.println("cmdC == 1 == goStraight");
        goStraight();
      case 2:
        Serial.println("cmdC == 2 == spinLeft");
        turnLeft();
      case 3:
        Serial.println("cmdC == 3 == spinRight");
        turnRight();
      case 4:
        Serial.println("cmdC == 4 == curveLeft");
        curveLeft();
      case 5:
        Serial.println("cmdC == 5 == curveRight");
        curveRight();
    }
    delay(10);    //delay 10ms between each read for stability
  }
}

void stop()
{
  analogWrite(EnA, 0);
  analogWrite(EnB, 0);
}

void goStraight()   //run both motors in the same direction
{
  analogWrite(EnA, 200);
  analogWrite(EnB, 200);
  // turn on motor A
  digitalWrite(In1, HIGH);
  digitalWrite(In2, LOW);
  // turn on motor B
  digitalWrite(In3, LOW);
  digitalWrite(In4, HIGH);
}

void goBack()   //run both motors in the same direction
{
  analogWrite(EnA, 200);
  analogWrite(EnB, 200);
  // turn on motor A
  digitalWrite(In1, LOW);
  digitalWrite(In2, HIGH);
  // turn on motor B
  digitalWrite(In3, HIGH);
  digitalWrite(In4, LOW);
}

void turnLeft()
{
  analogWrite(EnA, 100);
  analogWrite(EnB, 100);
  // turn on motor A
  digitalWrite(In1, HIGH);
  digitalWrite(In2, LOW);
  // turn on motor B
  digitalWrite(In3, HIGH);
  digitalWrite(In4, LOW);
}

void turnRight()
{
  analogWrite(EnA, 100);
  analogWrite(EnB, 100);
  // turn on motor A
  digitalWrite(In1, LOW);
  digitalWrite(In2, HIGH);
  // turn on motor B
  digitalWrite(In3, LOW);
  digitalWrite(In4, HIGH);
}

void curveLeft()   //run both motors in the same direction
{
  analogWrite(EnA, 200);
  analogWrite(EnB, 100);
  // turn on motor A
  digitalWrite(In1, HIGH);
  digitalWrite(In2, LOW);
  // turn on motor B
  digitalWrite(In3, LOW);
  digitalWrite(In4, HIGH);
}

void curveRight()   //run both motors in the same direction
{
  analogWrite(EnA, 100);
  analogWrite(EnB, 200);
  // turn on motor A
  digitalWrite(In1, HIGH);
  digitalWrite(In2, LOW);
  // turn on motor B
  digitalWrite(In3, LOW);
  digitalWrite(In4, HIGH);
}
